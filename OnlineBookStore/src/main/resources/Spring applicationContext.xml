<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- DBConnectionManager Bean -->
    <bean id="dbConnectionManager" class="DBConnectionManager">
        <constructor-arg value="jdbc:mysql://localhost:3306/BookstoreDB"/>
        <constructor-arg value="root"/>
        <constructor-arg value="root"/>
    </bean>

    <!-- TaskRegistrationServlet Bean -->
    <bean id="taskRegistrationServlet" class="TaskRegistrationServlet">
        <constructor-arg ref="dbConnectionManager"/>
    </bean>
</beans>